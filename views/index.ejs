<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"> 

    <title>My Node App</title>
</head>
<body style="text-align: center; background-color: #282c34;" class="container">
    <div class="heading" style="color: #fff;">
      <h1>My Node App</h1>
    </div>

    <form method="post" action="/api/post" class="form card mb-4" style="background-color: #ccc;">
      <div class="card-body" style="width: 50%; margin: auto;" >
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input style="background-color: rgb(238, 238, 238);" type="name" name="name" class="form-control"  placeholder="Name...">
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment:</label>
            <textarea style="background-color: rgb(246, 246, 246);" class="form-control" name="comment" placeholder="Enter your comment here..."></textarea>
          </div>
        </div>
        <button style="width: 47%; margin:auto;" type="submit"  class="btn btn-primary mb-4">Post</button>
    </form>
    <section class="form card" style="background-color: #ccc;">
        <div class="card-body" style="width: 50%; margin: auto;">
        <h3 class="display-3 mb-3">Items:</h3>
        <ul>
          <% data.forEach(function (item) {   %>
                    <li class="card border-dark mb-3" style="background-color: rgba(175, 169, 169, 0.591);" >
                    <h4 class="card-body"> 
              <%=   item.name   %>
                     </h4>  
               <p class="lead card-body">
           <%=   item.comment   %>
                      </p> 
                     
                      <button formaction="/api/post/<%=item.id%>" formmethod="post" class="btn btn-danger">Delete</button>
                </li>
       <%     })   %>
        </ul>
        </div>
    </section>
</body>
</html>